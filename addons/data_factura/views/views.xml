<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="data_factura.list">
      <field name="name">data_factura list</field>
      <field name="model">data_factura.data_factura</field>
      <field name="arch" type="xml">
        <tree>
          <field name="nombre"/>
          <field name="apellido"/>
          <field name="empresa"/>
          <field name="email"/>
          <field name="fecha"/>
        </tree>
      </field>
    </record>

    <record id="view_productos_tree" model="ir.ui.view">
      <field name="name">productos list</field>
      <field name="model">data_factura.productos</field>
      <field name="arch" type="xml">
        <tree string="Productos">
          <field name="bebidas"/>
          <field name="arroz"/>
          <field name="verduras"/>
          <field name="pan"/>
        </tree>
      </field>
    </record>

    <record id="view_precio_productos_tree" model="ir.ui.view">
      <field name="name">precio producto</field>
      <field name="model">data_factura.precio_productos</field>
      <field name="arch" type="xml">
        <tree string="Productos">
          <field name="factura_id"/>
          <field name="producto_id"/>
          <field name="cantidad"/>
          <field name="precio_unitario"/>
          <field name="subtotal"/>
        </tree>
      </field>
    </record>
    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="data_factura.action_window">
      <field name="name">Info_Clientes </field>
      <field name="res_model">data_factura.data_factura</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="data_factura.action_window_productos">
      <field name="name">Formulario de Productos</field>
      <field name="res_model">data_factura.productos</field>
      <field name="view_mode">tree,form</field>
  </record>

  <record model="ir.actions.act_window" id="data_factura.action_window_precio_producto">
    <field name="name">Formulario de Precios de Productos</field>
    <field name="res_model">data_factura.precio_productos</field>
    <field name="view_mode">tree,form</field>
</record>

  <record id="access_data_factura_productos" model="ir.model.access">
    <field name="name">Access Productos</field>
    <field name="model_id" ref="model_data_factura_productos"/>
    <field name="group_id" ref="base.group_user"/>
    <field name="perm_read" eval="True"/>
    <field name="perm_write" eval="True"/>
    <field name="perm_create" eval="True"/>
    <field name="perm_unlink" eval="True"/>
</record>

<record id="access_data_factura_precio_productos" model="ir.model.access">
  <field name="name">Access Productos</field>
  <field name="model_id" ref="model_data_factura_precio_productos"/>
  <field name="group_id" ref="base.group_user"/>
  <field name="perm_read" eval="True"/>
  <field name="perm_write" eval="True"/>
  <field name="perm_create" eval="True"/>
  <field name="perm_unlink" eval="True"/>
</record>

