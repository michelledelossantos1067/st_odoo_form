    <!-- Top menu item -->

    <menuitem name="Datos de Facturas" id="data_factura.menu_root"/>
    <!-- menu categories -->

    <menuitem name="Cliente" id="data_factura.menu_1" parent="data_factura.menu_root"/>
    <menuitem name="Lista de Clientes" id="data_factura.menu_1_list" parent="data_factura.menu_1" action="data_factura.action_window"/>
    <!-- <menuitem name="Server to list" id="data_factura" parent="data_factura.menu_2" action="data_factura.action_server"/> -->

    <menuitem name="Productos" id="data_factura.menu_2" parent="data_factura.menu_root"/>
    <menuitem name="Lista de Productos" id="data_factura.menu_productos_list" parent="data_factura.menu_2" action="data_factura.action_window_productos"/>
 

    <menuitem name="Precio Productos" id="data_factura.menu_3" parent="data_factura.menu_root"/>
    <menuitem name="Prc Productos" id="data_factura.menu_precio_producto" parent="data_factura.menu_3" action="data_factura.action_window_precio_producto"/>
 
  </data>
</odoo>
